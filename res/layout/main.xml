<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2f577b"
    >

 <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:src="@drawable/header" />

<Button
    android:id="@+id/throwDeviceButton"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/throwButton"/>
    
<Button
    android:id="@+id/localHSButton"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/localHighscoreButton"/>
<Button
    android:id="@+id/globalHSButton"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/globalHighscoreButton"/>    

</LinearLayout>

